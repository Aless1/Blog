<canvas id="evanyou" width="1427" height="803"></canvas>
<script>
    var canvas = document.getElementById('evanyou'),
    context = canvas.getContext('2d'),
    pr = window.devicePixelRatio || 1,
    width = window.innerWidth,
    height = window.innerHeight,
    f = 90,
    q,
    m = Math,
    r = 0,
    canvas.width = width * pr
    canvas.height = height * pr
    context.scale(pr, pr)
    context.globalAlpha = 0.6

    function evanyou() {
        context.clearRect(0, 0, width, height)
        q = [{
                x: 0,
                y: height * 0.7 + f
            }, {
                x: 0,
                y: height * 0.7 - f
            }]
        while (q[1].x < width + f) d(q[0], q[1]);
    }

    function d(i, j) {
        context.beginPath()
        context.moveTo(i.x, i.y)
        context.lineTo(j.x, j.y)
        var k = j.x + (Math.random() * 2 - 0.25) * f,
            n = y(j.y)
        context.lineTo(k, n)
        context.closePath()
        r -= Math.PI * 2 / -50
        context.fillStyle = '#' + (Math.cos(r) * 127 + 128 << 16 | Math.cos(r + Math.PI * 2 / 3) * 127 + 128 << 8 | Math.cos(r + Math.PI * 2 / 3 * 2) * 127 + 128).toString(16)
        context.fill()
        q[0] = q[1]
        q[1] = {
            x: k,
            y: n
        }
    }

    function y(p) {
        var t = p + (Math.random() * 2 - 1.1) * f
        return (t > height || t < 0) ? y(p) : t
    }
    document.onclick = evanyou
    document.ontouchstart = evanyou
    evanyou()
</script>
